<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:drawable="@drawable/icon_cb_nor" android:state_focused="false" android:state_pressed="false" android:state_checked="false"/>
    <item android:drawable="@drawable/icon_cb_pre" android:state_focused="false" android:state_pressed="false" android:state_checked="true"/>
    <!-- Focused states -->
    <item android:drawable="@drawable/icon_cb_pre" android:state_focused="true" android:state_pressed="false" android:state_checked="false"/>
    <item android:drawable="@drawable/icon_cb_pre" android:state_focused="true" android:state_pressed="false" android:state_checked="true"/>
    <!-- Pressed -->
    <item android:drawable="@drawable/icon_cb_pre" android:state_pressed="true" android:state_selected="true"/>
    <item android:drawable="@drawable/icon_cb_pre" android:state_pressed="true"/>

</selector>
