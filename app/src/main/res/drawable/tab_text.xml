<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:color="@color/theme_text" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:color="@color/theme" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <!-- Focused states -->
    <item android:color="@color/theme" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <item android:color="@color/theme" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    <!-- Pressed -->
    <item android:color="@color/theme" android:state_pressed="true" android:state_selected="true"/>
    <item android:color="@color/theme" android:state_pressed="true"/>

</selector>
